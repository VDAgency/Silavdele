import { useState } from "react";
import { Button } from "@/components/ui/button";
import { Check, X, Loader2 } from "lucide-react";
import axios from "axios";

const PricingSection = () => {
  // --- СОСТОЯНИЕ (STATE) ---
  const [isModalOpen, setIsModalOpen] = useState(false);
  const [loading, setLoading] = useState(false);
  
  const [selectedTariff, setSelectedTariff] = useState<{name: string, price: string} | null>(null);

  const [formData, setFormData] = useState({
    name: "",
    email: "",
    phone: ""
  });

  // --- ДАННЫЕ ТАРИФОВ ---
  const plans = [
    {
      id: "basic",
      name: "Базовый",
      subtitle: "Для быстрого старта",
      price: "15 500",
      oldPrice: "24 999",
      discount: "38%",
      features: [
        "25 видеоуроков",
        "Готовые шаблоны контента",
        "Доступ к курсам и обновлениям навсегда",
        "Поддержка в чате 3 месяца"
      ],
      isPopular: false,
      cta: "Выбрать тариф",
      cornerImage: "/assets/pricing/badge-corner-small.png", 
      topBadge: null
    },
    {
      id: "pro",
      name: "Продвинутый",
      subtitle: "Для масштабирования",
      price: "30 999",
      oldPrice: "49 999",
      discount: "38%",
      features: [
        "50+ видеоуроков",
        "Расширенные стратегии продвижения",
        "AI/нейросетевые инструменты",
        "Доступ к курсам и обновлениям навсегда",
        "Поддержка в чате 6 месяцев",
        "Разборы кейсов",
        "Доступ к закрытому комьюнити"
      ],
      isPopular: true, // Это включает синий дизайн
      cta: "Начать обучение",
      cornerImage: "/assets/pricing/badge-corner-large.png",
      topBadge: "/assets/pricing/badge-recommend.png"
    },
    {
      id: "vip",
      name: "VIP",
      subtitle: "Максимальный результат",
      price: "61 999",
      oldPrice: "99 999",
      discount: "38%",
      features: [
        "Всё из тарифа Продвинутый",
        "Индивидуальные консультации 1-на-1",
        "Персональная стратегия роста",
        "Приоритетная поддержка 24/7",
        "Разбор вашего канала",
        "Доступ к закрытому комьюнити",
        "Пожизненный доступ ко всем обновлениям"
      ],
      isPopular: false,
      cta: "Получить VIP",
      cornerImage: "/assets/pricing/badge-corner-small.png",
      topBadge: "/assets/pricing/badge-max.png"
    }
  ];

  // --- ФУНКЦИИ ---
  const openPaymentModal = (tariffName: string, tariffPrice: string) => {
    setSelectedTariff({ name: tariffName, price: tariffPrice });
    setIsModalOpen(true);
  };

  const handleInputChange = (e: React.ChangeEvent<HTMLInputElement>) => {
    const { name, value } = e.target;
    setFormData(prev => ({ ...prev, [name]: value }));
  };

  const handlePayment = async (e: React.FormEvent) => {
    e.preventDefault();
    if (!selectedTariff) return;
    setLoading(true);

    try {
      const savedRefCode = localStorage.getItem('uds_ref_code');
      const cleanPrice = parseFloat(selectedTariff.price.replace(/\s/g, '')).toFixed(2);

      const response = await axios.post('/api/payment/create', {
        amount: cleanPrice,
        email: formData.email,
        phone: formData.phone,
        name: formData.name,
        tariff: selectedTariff.name,
        referrer_code: savedRefCode || null
      });

      if (response.data.confirmation_url) {
        window.location.href = response.data.confirmation_url;
      } else {
        alert("Ошибка: Сервер не вернул ссылку на оплату");
      }

    } catch (error) {
      console.error("Ошибка оплаты:", error);
      alert("Не удалось создать платеж. Проверьте соединение или попробуйте позже.");
    } finally {
      setLoading(false);
    }
  };

  return (
    <section id="pricing" className="relative py-24 md:py-32 bg-white overflow-visible">
      
      {/* ПАТТЕРН НА ФОНЕ (Как в секции программы) */}
      <div className="absolute inset-0 z-0 opacity-30 pointer-events-none">
         <img src="/assets/program/bg-pattern.png" alt="bg" className="w-full h-full object-cover" />
      </div>
      
      <div className="container mx-auto px-4 relative z-10 max-w-7xl">
        
        {/* ЗАГОЛОВОК */}
        <div className="max-w-3xl mx-auto text-center mb-16 space-y-4">
          <h2 className="text-4xl md:text-6xl font-black tracking-tight text-foreground">
            Выберите свой{" "}
            <span className="text-[#0088CC]">
              тариф
            </span>
          </h2>
          <p className="text-xl text-muted-foreground font-medium">
            Начните с комфортного для вас уровня и масштабируйте результаты
          </p>
        </div>

        {/* СЕТКА ТАРИФОВ */}
        {/* items-start важен, чтобы карточки были своей естественной высоты, но можно и stretch */}
        <div className="grid grid-cols-1 md:grid-cols-3 gap-8 items-start pt-8">
          {plans.map((plan, index) => {
            // Определяем стили в зависимости от того, популярный тариф (синий) или нет (белый)
            const isBlue = plan.isPopular;
            
            return (
              <div
                key={index}
                className={`relative rounded-[30px] p-8 flex flex-col transition-transform duration-300 hover:scale-[1.02]
                  ${isBlue 
                    ? "bg-[#0088CC] text-white shadow-2xl md:-mt-8 pb-12" // Синий тариф чуть выше (-mt-8)
                    : "bg-white text-foreground border border-gray-100 shadow-xl"
                  }
                `}
              >
                
                {/* --- 1. ПЛАШКА СВЕРХУ (Рекомендуем / Максимум) --- */}
                {plan.topBadge && (
                  <div className="absolute -top-6 left-1/2 transform -translate-x-1/2 z-20">
                    <img src={plan.topBadge} alt="Badge" className="h-10 md:h-12 w-auto object-contain drop-shadow-md" />
                  </div>
                )}

                {/* --- 2. УГЛОВАЯ ЛЕНТА (Скидка) --- */}
                <div className="absolute top-0 right-0 z-10 overflow-hidden w-[150px] h-[150px] rounded-tr-[30px] pointer-events-none">
                   {/* Картинка ленты */}
                   <img 
                     src={plan.cornerImage} 
                     alt="discount" 
                     className={`absolute top-0 right-0 ${isBlue ? 'w-[120px]' : 'w-[100px]'}`} 
                   />
                   
                   {/* Текст на ленте (поворачиваем и позиционируем) */}
                   <span 
                     className={`absolute font-bold text-foreground rotate-45 transform origin-center text-center
                        ${isBlue 
                           ? 'top-[35px] right-[5px] text-sm w-[120px]' // Для большой ленты
                           : 'top-[22px] right-[-8px] text-[10px] w-[100px]' // Для маленькой ленты
                        }
                     `}
                   >
                     Скидка {plan.discount}
                   </span>
                </div>

                {/* КОНТЕНТ КАРТОЧКИ */}
                <div className="space-y-6 flex-grow relative z-10">
                  
                  {/* Заголовок */}
                  <div className="space-y-1">
                    <h3 className="text-2xl md:text-3xl font-black">{plan.name}</h3>
                    <p className={`text-sm font-medium ${isBlue ? "text-white/80" : "text-muted-foreground"}`}>
                      {plan.subtitle}
                    </p>
                  </div>

                  {/* Цена */}
                  <div className="space-y-1">
                    <div className="text-sm font-semibold line-through opacity-60">
                      {plan.oldPrice} ₽
                    </div>
                    <div className="flex items-baseline gap-1">
                      <span className="text-4xl md:text-5xl font-black">{plan.price}</span>
                      <span className="text-2xl font-bold">₽</span>
                    </div>
                  </div>

                  {/* Кнопка */}
                  <Button 
                    onClick={() => openPaymentModal(plan.name, plan.price)}
                    className={`w-full py-7 text-lg font-bold rounded-full shadow-lg transition-all duration-300
                      ${isBlue
                        ? "bg-white text-[#0088CC] hover:bg-gray-100"
                        : "bg-[#0088CC] text-white hover:bg-[#0077aa]"
                      }
                    `}
                  >
                    {plan.cta}
                  </Button>

                  <hr className={`border-0 h-px ${isBlue ? "bg-white/20" : "bg-gray-100"}`} />

                  {/* Список фич */}
                  <div className="space-y-4">
                    {plan.features.map((feature, idx) => (
                      <div key={idx} className="flex items-start gap-3">
                        <div className={`mt-1 flex-shrink-0 w-5 h-5 rounded-full flex items-center justify-center
                           ${isBlue ? "bg-white/20" : "bg-[#0088CC]/10"}
                        `}>
                           <Check className={`w-3 h-3 ${isBlue ? "text-white" : "text-[#0088CC]"}`} strokeWidth={4} />
                        </div>
                        <span className={`text-sm md:text-base font-medium leading-tight ${isBlue ? "text-white" : "text-gray-600"}`}>
                          {feature}
                        </span>
                      </div>
                    ))}
                  </div>
                </div>
              </div>
            );
          })}
        </div>

        {/* Футер секции */}
        <div className="mt-20 text-center space-y-4">
          <h3 className="text-2xl md:text-4xl font-black text-foreground">
            Технологии будущего уже здесь!
          </h3>
        </div>
      </div>

      {/* --- МОДАЛЬНОЕ ОКНО (Без изменений) --- */}
      {isModalOpen && (
        <div className="fixed inset-0 z-50 flex items-center justify-center p-4 bg-black/60 backdrop-blur-sm animate-in fade-in duration-200">
          <div className="bg-white rounded-[30px] shadow-2xl w-full max-w-md overflow-hidden relative animate-in zoom-in-95 duration-200 p-8">
            <button onClick={() => setIsModalOpen(false)} className="absolute top-5 right-5 text-gray-400 hover:text-gray-800 transition-colors">
              <X className="w-6 h-6" />
            </button>
            <div className="mb-6 text-center">
              <h3 className="text-2xl font-black mb-1">Оформление заказа</h3>
              <p className="text-gray-500">Тариф: <span className="font-bold text-[#0088CC]">{selectedTariff?.name}</span></p>
              <p className="text-xl font-bold mt-2">{selectedTariff?.price} ₽</p>
            </div>
            <form onSubmit={handlePayment} className="space-y-4">
              <input name="name" type="text" required placeholder="Ваше Имя" value={formData.name} onChange={handleInputChange} className="w-full px-5 py-4 rounded-xl bg-gray-50 border-transparent focus:bg-white focus:border-[#0088CC] outline-none transition-all font-medium" />
              <input name="email" type="email" required placeholder="Email" value={formData.email} onChange={handleInputChange} className="w-full px-5 py-4 rounded-xl bg-gray-50 border-transparent focus:bg-white focus:border-[#0088CC] outline-none transition-all font-medium" />
              <input name="phone" type="tel" required placeholder="Телефон" value={formData.phone} onChange={handleInputChange} className="w-full px-5 py-4 rounded-xl bg-gray-50 border-transparent focus:bg-white focus:border-[#0088CC] outline-none transition-all font-medium" />
              <Button type="submit" disabled={loading} className="w-full py-6 text-lg font-bold rounded-xl mt-2 bg-[#0088CC] hover:bg-[#0077aa] text-white">
                {loading ? <><Loader2 className="mr-2 h-5 w-5 animate-spin" />Создаем заказ...</> : "Перейти к оплате"}
              </Button>
              <p className="text-xs text-center text-gray-400 mt-4 leading-snug">Нажимая кнопку, вы соглашаетесь с условиями оферты.</p>
            </form>
          </div>
        </div>
      )}

    </section>
  );
};

export default PricingSection;